<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16sp">

    <View
        android:id="@+id/recipe_step_link_top"
        android:layout_width="1dp"
        android:layout_height="8dp"
        android:background="@color/recipe_step_bg_color"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_step_number"
        app:layout_constraintRight_toRightOf="@+id/text_view_step_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_step_number"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/recipe_step_background"
        android:gravity="center"
        android:textColor="@color/textOnPrimary"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_step_link_top"
        tools:text="1" />

    <View
        android:id="@+id/recipe_step_link_bottom"
        android:layout_width="1dp"
        android:layout_height="8dp"
        android:background="@color/recipe_step_bg_color"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_step_number"
        app:layout_constraintRight_toRightOf="@+id/text_view_step_number"
        app:layout_constraintTop_toBottomOf="@+id/text_view_step_number" />

    <TextView
        android:id="@+id/text_view_content"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/text_view_step_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium " />
</androidx.constraintlayout.widget.ConstraintLayout>